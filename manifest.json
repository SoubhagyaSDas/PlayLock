{
    "manifest_version": 3,
    "name": "YouTube Focus Mode",
    "version": "1.0",
    "description": "Remove suggestions on YouTube when in playlist mode to avoid procrastination.",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
}
  